{

	"manifest_version": 2,
	"name": "Metrication",
	"version": "1.0",

	"description": "A browser extension for contextual unit and currency converter.",

	"applications": {
		"gecko": {
			"id": "metrication@example.com"
		}
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["converter_conversions.js", "converter_util.js", "converter_async.js", "converter_core.js", "converter_iface.js", "converter_tz.js", "converter_prefs.js", "converter_currency.js", "converter_currency_iface.js", "metrication.js"]
		}
	]

}